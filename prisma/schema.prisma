generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id      String  @id @unique
  balance Decimal @db.Decimal(1000, 2)

  role    UserRole @default(USER)
}

enum UserRole { // This is for bot permissions outside of Discord's scope
  USER
  ADMIN
}